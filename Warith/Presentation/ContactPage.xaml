<Page x:Class="Warith.Presentation.ContactPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Warith.Presentation"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:toolkit="using:Uno.Toolkit.UI"
      Background="{ThemeResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <toolkit:NavigationBar x:Name="NavBar" Grid.Row="0">
            <toolkit:NavigationBar.Content>
                <Image Source="ms-appx:///Assets/Splash/favicon.png"
                       HorizontalAlignment="Left"
                       Width="128"
                       Height="40" />
            </toolkit:NavigationBar.Content>
            <toolkit:NavigationBar.PrimaryCommands>
                <AppBarButton Label="Home" uen:Navigation.Request="!Main">
                    <AppBarButton.Icon>
                        <SymbolIcon Symbol="Home" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton Label="About" uen:Navigation.Request="!About">
                    <AppBarButton.Icon>
                        <SymbolIcon Symbol="Help" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton Label="Contact" uen:Navigation.Request="!Contact">
                    <AppBarButton.Icon>
                        <SymbolIcon Symbol="Contact" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </toolkit:NavigationBar.PrimaryCommands>
        </toolkit:NavigationBar>

        <ScrollViewer Grid.Row="1">
            <StackPanel Padding="20" Spacing="20">
                <TextBlock Text="If you have any questions, feedback, or need assistance, please feel free to reach out to us." 
                           TextWrapping="Wrap" FontSize="16"/>

                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="15" CornerRadius="8">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Email Address:" FontWeight="SemiBold"/>
                        <TextBlock Text="support@almwareeth.com" Foreground="{ThemeResource SystemAccentColor}"/>

                        <TextBlock Text="Website:" FontWeight="SemiBold" Margin="0,10,0,0"/>
                        <TextBlock Text="https://almwareeth.com" Foreground="{ThemeResource SystemAccentColor}"/>
                    </StackPanel>
                </Border>

                <TextBlock Text="We value your input and strive to improve Warith based on your suggestions." 
                   TextWrapping="Wrap" FontStyle="Italic" Foreground="Gray"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
