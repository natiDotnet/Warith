<Page x:Class="Warith.Presentation.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Warith.Presentation"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:toolkit="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      NavigationCacheMode="Required"
      Background="{ThemeResource BackgroundBrush}">
    
    <ScrollViewer>
        <StackPanel x:Name="MainContainer" Padding="10,10,10,10" Spacing="15" MaxWidth="1200">

            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="AdaptiveStates">
                    <VisualState x:Name="NarrowState">
                        <VisualState.StateTriggers>
                            <AdaptiveTrigger MinWindowWidth="0"/>
                        </VisualState.StateTriggers>
                        <VisualState.Setters>
                            <Setter Target="MainContainer.Padding" Value="10"/>
                            <!-- Debt and Amount fields -->
                            <Setter Target="DebtAmountPanel.Orientation" Value="Vertical"/>
                            <Setter Target="DebtPanel.Orientation" Value="Vertical"/>
                            <Setter Target="AmountPanel.Orientation" Value="Vertical"/>
                            <!-- Make will fields stack vertically on narrow screens - REMOVED for Always One Row -->
                            <!-- <Setter Target="WillsPanel.Orientation" Value="Vertical"/> -->
                            <!-- <Setter Target="WillsPanel.Spacing" Value="10"/> -->
                            
                            <!-- Make each will field pair stack vertically -->
                            <Setter Target="Will1Panel.Orientation" Value="Vertical"/>
                            <Setter Target="Will2Panel.Orientation" Value="Vertical"/>
                            <Setter Target="Will3Panel.Orientation" Value="Vertical"/>
                            <!-- Spouse fields -->
                            <Setter Target="SpousePanel.Orientation" Value="Vertical"/>
                            <Setter Target="WifePanel.Orientation" Value="Vertical"/>
                            <Setter Target="HusbandPanel.Orientation" Value="Vertical"/>
                            <!-- Parents fields -->
                            <Setter Target="ParentsPanel.Orientation" Value="Vertical"/>
                            <Setter Target="MotherPanel.Orientation" Value="Vertical"/>
                            <Setter Target="FatherPanel.Orientation" Value="Vertical"/>
                            <Setter Target="Grandparents1Panel.Orientation" Value="Vertical"/>
                            <Setter Target="MomMomPanel.Orientation" Value="Vertical"/>
                            <Setter Target="DadDadPanel.Orientation" Value="Vertical"/>
                            <Setter Target="Grandparents2Panel.Orientation" Value="Vertical"/>
                            <Setter Target="DadDadDadPanel.Orientation" Value="Vertical"/>
                            <Setter Target="Grandparents3Panel.Orientation" Value="Vertical"/>
                            <Setter Target="MomMomMomPanel.Orientation" Value="Vertical"/>
                            <Setter Target="MomDadPanel.Orientation" Value="Vertical"/>
                            <Setter Target="Grandparents4Panel.Orientation" Value="Vertical"/>
                            <Setter Target="MomDadDadPanel.Orientation" Value="Vertical"/>
                            <Setter Target="MomMomDadPanel.Orientation" Value="Vertical"/>
                            <!-- Children fields -->
                            <Setter Target="Row1Panel.Orientation" Value="Vertical"/>
                            <Setter Target="SonPanel.Orientation" Value="Vertical"/>
                            <Setter Target="DaughterPanel.Orientation" Value="Vertical"/>
                            <Setter Target="Row2Panel.Orientation" Value="Vertical"/>
                            <Setter Target="SonOfSonPanel.Orientation" Value="Vertical"/>
                            <Setter Target="DaughterOfSonPanel.Orientation" Value="Vertical"/>
                            <Setter Target="Row3Panel.Orientation" Value="Vertical"/>
                            <Setter Target="SonOfSonOfSonPanel.Orientation" Value="Vertical"/>
                            <Setter Target="DaughterOfSonOfSonPanel.Orientation" Value="Vertical"/>
                            <Setter Target="Row4Panel.Orientation" Value="Vertical"/>
                            <Setter Target="FullBrotherPanel.Orientation" Value="Vertical"/>
                            <Setter Target="FullSisterPanel.Orientation" Value="Vertical"/>
                            <Setter Target="Row5Panel.Orientation" Value="Vertical"/>
                            <Setter Target="PaternalBrotherPanel.Orientation" Value="Vertical"/>
                            <Setter Target="PaternalSisterPanel.Orientation" Value="Vertical"/>
                            <Setter Target="Row6Panel.Orientation" Value="Vertical"/>
                            <Setter Target="UterineBrotherPanel.Orientation" Value="Vertical"/>
                            <Setter Target="UterineSisterPanel.Orientation" Value="Vertical"/>
                            <Setter Target="Row7Panel.Orientation" Value="Vertical"/>
                            <Setter Target="SonOfFullBrotherPanel.Orientation" Value="Vertical"/>
                            <Setter Target="SonOfPaternalBrotherPanel.Orientation" Value="Vertical"/>
                            <Setter Target="Row8Panel.Orientation" Value="Vertical"/>
                            <Setter Target="SonOfSonOfFullBrotherPanel.Orientation" Value="Vertical"/>
                            <Setter Target="SonOfSonOfPaternalBrotherPanel.Orientation" Value="Vertical"/>
                            <Setter Target="Row9Panel.Orientation" Value="Vertical"/>
                            <Setter Target="FullBrotherOfFatherPanel.Orientation" Value="Vertical"/>
                            <Setter Target="PaternalBrotherOfFatherPanel.Orientation" Value="Vertical"/>
                            <Setter Target="Row10Panel.Orientation" Value="Vertical"/>
                            <Setter Target="SonOfFullBrotherOfFatherPanel.Orientation" Value="Vertical"/>
                            <Setter Target="SonOfPaternalBrotherOfFatherPanel.Orientation" Value="Vertical"/>
                            <Setter Target="Row11Panel.Orientation" Value="Vertical"/>
                            <Setter Target="SonOfSonOfFullBrotherOfFatherPanel.Orientation" Value="Vertical"/>
                            <Setter Target="SonOfSonOfPaternalBrotherOfFatherPanel.Orientation" Value="Vertical"/>
                            <Setter Target="Row12Panel.Orientation" Value="Vertical"/>
                            <Setter Target="FullBrotherOfGrandFatherPanel.Orientation" Value="Vertical"/>
                            <Setter Target="PaternalBrotherOfGrandFatherPanel.Orientation" Value="Vertical"/>
                            <Setter Target="Row13Panel.Orientation" Value="Vertical"/>
                            <Setter Target="SonOfFullBrotherOfGrandFatherPanel.Orientation" Value="Vertical"/>
                            <Setter Target="SonOfPaternalBrotherOfGrandFatherPanel.Orientation" Value="Vertical"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="WideState">
                        <VisualState.StateTriggers>
                            <AdaptiveTrigger MinWindowWidth="600"/>
                        </VisualState.StateTriggers>
                        <VisualState.Setters>
                            <Setter Target="MainContainer.Padding" Value="20"/>
                            <!-- Debt and Amount fields -->
                            <Setter Target="DebtAmountPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="DebtPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="AmountPanel.Orientation" Value="Horizontal"/>
                            <!-- <Setter Target="WillsPanel.Orientation" Value="Horizontal"/> -->
                            <!-- <Setter Target="WillsPanel.Spacing" Value="15"/> -->
                            <Setter Target="Will1Panel.Orientation" Value="Horizontal"/>
                            <Setter Target="Will2Panel.Orientation" Value="Horizontal"/>
                            <Setter Target="Will3Panel.Orientation" Value="Horizontal"/>
                            <!-- Spouse fields -->
                            <Setter Target="SpousePanel.Orientation" Value="Horizontal"/>
                            <Setter Target="WifePanel.Orientation" Value="Horizontal"/>
                            <Setter Target="HusbandPanel.Orientation" Value="Horizontal"/>
                            <!-- Parents fields -->
                            <Setter Target="ParentsPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="MotherPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="FatherPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="Grandparents1Panel.Orientation" Value="Horizontal"/>
                            <Setter Target="MomMomPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="DadDadPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="Grandparents2Panel.Orientation" Value="Horizontal"/>
                            <Setter Target="DadDadDadPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="Grandparents3Panel.Orientation" Value="Horizontal"/>
                            <Setter Target="MomMomMomPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="MomDadPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="Grandparents4Panel.Orientation" Value="Horizontal"/>
                            <Setter Target="MomDadDadPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="MomMomDadPanel.Orientation" Value="Horizontal"/>
                            <!-- Children fields -->
                            <Setter Target="Row1Panel.Orientation" Value="Horizontal"/>
                            <Setter Target="SonPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="DaughterPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="Row2Panel.Orientation" Value="Horizontal"/>
                            <Setter Target="SonOfSonPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="DaughterOfSonPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="Row3Panel.Orientation" Value="Horizontal"/>
                            <Setter Target="SonOfSonOfSonPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="DaughterOfSonOfSonPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="Row4Panel.Orientation" Value="Horizontal"/>
                            <Setter Target="FullBrotherPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="FullSisterPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="Row5Panel.Orientation" Value="Horizontal"/>
                            <Setter Target="PaternalBrotherPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="PaternalSisterPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="Row6Panel.Orientation" Value="Horizontal"/>
                            <Setter Target="UterineBrotherPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="UterineSisterPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="Row7Panel.Orientation" Value="Horizontal"/>
                            <Setter Target="SonOfFullBrotherPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="SonOfPaternalBrotherPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="Row8Panel.Orientation" Value="Horizontal"/>
                            <Setter Target="SonOfSonOfFullBrotherPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="SonOfSonOfPaternalBrotherPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="Row9Panel.Orientation" Value="Horizontal"/>
                            <Setter Target="FullBrotherOfFatherPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="PaternalBrotherOfFatherPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="Row10Panel.Orientation" Value="Horizontal"/>
                            <Setter Target="SonOfFullBrotherOfFatherPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="SonOfPaternalBrotherOfFatherPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="Row11Panel.Orientation" Value="Horizontal"/>
                            <Setter Target="SonOfSonOfFullBrotherOfFatherPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="SonOfSonOfPaternalBrotherOfFatherPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="Row12Panel.Orientation" Value="Horizontal"/>
                            <Setter Target="FullBrotherOfGrandFatherPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="PaternalBrotherOfGrandFatherPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="Row13Panel.Orientation" Value="Horizontal"/>
                            <Setter Target="SonOfFullBrotherOfGrandFatherPanel.Orientation" Value="Horizontal"/>
                            <Setter Target="SonOfPaternalBrotherOfGrandFatherPanel.Orientation" Value="Horizontal"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>

            <!-- Gender Selection -->
            <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="15">
                <StackPanel Spacing="10">
                    <!-- Gender -->
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="Gender" FontWeight="Bold" VerticalAlignment="Center" MinWidth="100"/>
                        <RadioButton x:Name="lll" Content="Female" GroupName="gender"/>
                        <RadioButton x:Name="kj" Content="Male" GroupName="gender" IsChecked="True"/>
                    </StackPanel>

                    <!-- Debt and Total Amount -->
                    <StackPanel x:Name="DebtAmountPanel" Orientation="Horizontal" Spacing="15">
                        <StackPanel x:Name="AmountPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Total amount?" VerticalAlignment="Center" MinWidth="100"/>
                            <TextBox x:Name="floos" HorizontalAlignment="Stretch" MinWidth="150" InputScope="Number" BeforeTextChanging="OnNumberOnlyBeforeTextChanging"/>
                        </StackPanel>
                        <StackPanel x:Name="DebtPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Debt?" VerticalAlignment="Center" MinWidth="80"/>
                            <TextBox x:Name="dyoon" MinWidth="150" HorizontalAlignment="Stretch" InputScope="Number" BeforeTextChanging="OnNumberOnlyBeforeTextChanging"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Will Fields - All in one row with labels on left -->
                    <!-- Will Fields - All in one row with labels on left -->
                    <Grid x:Name="WillsPanel" ColumnSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel x:Name="Will1Panel" Grid.Column="0" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Will?" VerticalAlignment="Center" MinWidth="60"/>
                            <AutoSuggestBox x:Name="eradyya1" HorizontalAlignment="Stretch" PlaceholderText="1/3" TextChanged="OnWillTextChanged"/>
                        </StackPanel>
                        <StackPanel x:Name="Will2Panel" Grid.Column="1" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="second will?" VerticalAlignment="Center" MinWidth="80"/>
                            <AutoSuggestBox x:Name="eradyya2" HorizontalAlignment="Stretch" PlaceholderText="1/4" TextChanged="OnWillTextChanged"/>
                        </StackPanel>
                        <StackPanel x:Name="Will3Panel" Grid.Column="2" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="third will?" VerticalAlignment="Center" MinWidth="70"/>
                            <AutoSuggestBox x:Name="eradyya3" HorizontalAlignment="Stretch" PlaceholderText="1/5" TextChanged="OnWillTextChanged"/>
                        </StackPanel>
                    </Grid>
                    <TextBlock Text="(ex: 1/3, 1/4, etc.)" Foreground="Gray" FontSize="11" FontStyle="Italic"/>

                    <!-- Accept Will More Than 1/3 -->
                    <StackPanel x:Name="egaza" Orientation="Horizontal" Spacing="10" Visibility="Collapsed">
                        <TextBlock Text="Do heirs accept will more than 1/3?" Foreground="Green" FontSize="16" VerticalAlignment="Center" TextWrapping="Wrap"/>
                        <ComboBox x:Name="agazo" SelectedIndex="0" MinWidth="80">
                            <ComboBoxItem Content="No"/>
                            <ComboBoxItem Content="Yes"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Spouses and Parents -->
            <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="15">
                <StackPanel Spacing="10">
                    <!-- Spouse Row -->
                    <StackPanel x:Name="SpousePanel" Orientation="Horizontal" Spacing="15">
                        <StackPanel x:Name="WifePanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock x:Name="m41" Text="Is Wife alive?" VerticalAlignment="Center" MinWidth="100"/>
                            <ComboBox x:Name="zawgat" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="2"/>
                                <ComboBoxItem Content="3"/>
                                <ComboBoxItem Content="4"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel x:Name="HusbandPanel" Orientation="Horizontal" Spacing="5" Visibility="Collapsed">
                            <TextBlock x:Name="u41" Text="Is Husband alive?" VerticalAlignment="Center" MinWidth="120"/>
                            <ComboBox x:Name="zawg1" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150" Visibility="Collapsed">
                                <ComboBoxItem Content="No"/>
                                <ComboBoxItem Content="Yes"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                    <!-- Parents -->
                    <StackPanel x:Name="ParentsPanel" Orientation="Horizontal" Spacing="15">
                        <StackPanel x:Name="MotherPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Is Mother alive?" VerticalAlignment="Center" MinWidth="100"/>
                            <ComboBox x:Name="om1" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                                <ComboBoxItem Content="Yes"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel x:Name="FatherPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Is Father alive?" VerticalAlignment="Center" MinWidth="100"/>
                            <ComboBox x:Name="ab1" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                                <ComboBoxItem Content="Yes"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                    <!-- Grandparents Row 1 -->
                    <StackPanel x:Name="Grandparents1Panel" Orientation="Horizontal" Spacing="15">
                        <StackPanel x:Name="MomMomPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Mother of Mother?" VerticalAlignment="Center" MinWidth="120"/>
                            <ComboBox x:Name="omom1" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                                <ComboBoxItem Content="Yes"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel x:Name="DadDadPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Father of Father?" VerticalAlignment="Center" MinWidth="120"/>
                            <ComboBox x:Name="abab1" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                                <ComboBoxItem Content="Yes"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                    <!-- Grandparents Row 2 -->
                    <StackPanel x:Name="Grandparents2Panel" Orientation="Horizontal" Spacing="15">
                        <StackPanel x:Name="DadDadDadPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Father of Father of Father?" VerticalAlignment="Center" MinWidth="160"/>
                            <ComboBox x:Name="ababab1" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                                <ComboBoxItem Content="Yes"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                    <!-- Grandparents Row 3 -->
                    <StackPanel x:Name="Grandparents3Panel" Orientation="Horizontal" Spacing="15">
                        <StackPanel x:Name="MomMomMomPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Mother of mother of mother?" VerticalAlignment="Center" MinWidth="160"/>
                            <ComboBox x:Name="omomom1" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                                <ComboBoxItem Content="Yes"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel x:Name="MomDadPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Mother of Father?" VerticalAlignment="Center" MinWidth="120"/>
                            <ComboBox x:Name="omab1" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                                <ComboBoxItem Content="Yes"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                    <!-- Grandparents Row 4 -->
                    <StackPanel x:Name="Grandparents4Panel" Orientation="Horizontal" Spacing="15">
                        <StackPanel x:Name="MomDadDadPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Mother of father of father?" VerticalAlignment="Center" MinWidth="160"/>
                            <ComboBox x:Name="omabab1" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                                <ComboBoxItem Content="Yes"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel x:Name="MomMomDadPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Mother of mother of father?" VerticalAlignment="Center" MinWidth="160"/>
                            <ComboBox x:Name="omabab2" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                                <ComboBoxItem Content="Yes"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Children and Relatives (s1-s26) -->
            <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="15">
                <StackPanel Spacing="5">
                    <!-- Row 1: Son and Daughter -->
                    <StackPanel x:Name="Row1Panel" Orientation="Horizontal" Spacing="15">
                        <StackPanel x:Name="SonPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Son?" VerticalAlignment="Center" MinWidth="100"/>
                            <ComboBox x:Name="s1" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel x:Name="DaughterPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Daughter?" VerticalAlignment="Center" MinWidth="100"/>
                            <ComboBox x:Name="s2" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                                <ComboBoxItem Content="1"/><ComboBoxItem Content="2"/><ComboBoxItem Content="3"/><ComboBoxItem Content="4"/><ComboBoxItem Content="5"/>
                                <ComboBoxItem Content="6"/><ComboBoxItem Content="7"/><ComboBoxItem Content="8"/><ComboBoxItem Content="9"/><ComboBoxItem Content="10"/>
                                <ComboBoxItem Content="11"/><ComboBoxItem Content="12"/><ComboBoxItem Content="13"/><ComboBoxItem Content="14"/><ComboBoxItem Content="15"/>
                                <ComboBoxItem Content="16"/><ComboBoxItem Content="17"/><ComboBoxItem Content="18"/><ComboBoxItem Content="19"/><ComboBoxItem Content="20"/>
                                <ComboBoxItem Content="21"/><ComboBoxItem Content="22"/><ComboBoxItem Content="23"/><ComboBoxItem Content="24"/><ComboBoxItem Content="25"/>
                                <ComboBoxItem Content="26"/><ComboBoxItem Content="27"/><ComboBoxItem Content="28"/><ComboBoxItem Content="29"/><ComboBoxItem Content="30"/>
                                <ComboBoxItem Content="31"/><ComboBoxItem Content="32"/><ComboBoxItem Content="33"/><ComboBoxItem Content="34"/><ComboBoxItem Content="35"/>
                                <ComboBoxItem Content="36"/><ComboBoxItem Content="37"/><ComboBoxItem Content="38"/><ComboBoxItem Content="39"/><ComboBoxItem Content="40"/>
                                <ComboBoxItem Content="41"/><ComboBoxItem Content="42"/><ComboBoxItem Content="43"/><ComboBoxItem Content="44"/><ComboBoxItem Content="45"/>
                                <ComboBoxItem Content="46"/><ComboBoxItem Content="47"/><ComboBoxItem Content="48"/><ComboBoxItem Content="49"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                    <!-- Row 2: Son of Son and Daughter of Son -->
                    <StackPanel x:Name="Row2Panel" Orientation="Horizontal" Spacing="15">
                        <StackPanel x:Name="SonOfSonPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Son of Son?" VerticalAlignment="Center" MinWidth="100"/>
                            <ComboBox x:Name="s3" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel x:Name="DaughterOfSonPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Daughter of Son?" VerticalAlignment="Center" MinWidth="140"/>
                            <ComboBox x:Name="s4" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                    <!-- Row 3: Son of son of son and Daughter of son of son -->
                    <StackPanel x:Name="Row3Panel" Orientation="Horizontal" Spacing="15">
                        <StackPanel x:Name="SonOfSonOfSonPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Son of son of son?" VerticalAlignment="Center" MinWidth="140"/>
                            <ComboBox x:Name="s5" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel x:Name="DaughterOfSonOfSonPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Daughter of son of son?" VerticalAlignment="Center" MinWidth="180"/>
                            <ComboBox x:Name="s6" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                    <!-- Row 4: Full Brother and Full Sister -->
                    <StackPanel x:Name="Row4Panel" Orientation="Horizontal" Spacing="15">
                        <StackPanel x:Name="FullBrotherPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Full Brother?" VerticalAlignment="Center" MinWidth="100"/>
                            <ComboBox x:Name="s7" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel x:Name="FullSisterPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Full Sister?" VerticalAlignment="Center" MinWidth="100"/>
                            <ComboBox x:Name="s8" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                    <!-- Row 5: Paternal Brother and Paternal Sister -->
                    <StackPanel x:Name="Row5Panel" Orientation="Horizontal" Spacing="15">
                        <StackPanel x:Name="PaternalBrotherPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Paternal Brother?" VerticalAlignment="Center" MinWidth="120"/>
                            <ComboBox x:Name="s9" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel x:Name="PaternalSisterPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Paternal Sister?" VerticalAlignment="Center" MinWidth="120"/>
                            <ComboBox x:Name="s10" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                    <!-- Row 6: Uterine Brother and Uterine Sister -->
                    <StackPanel x:Name="Row6Panel" Orientation="Horizontal" Spacing="15">
                        <StackPanel x:Name="UterineBrotherPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Uterine Brother?" VerticalAlignment="Center" MinWidth="120"/>
                            <ComboBox x:Name="s11" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel x:Name="UterineSisterPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Uterine Sister?" VerticalAlignment="Center" MinWidth="120"/>
                            <ComboBox x:Name="s12" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                    <!-- Row 7: Son of Full Brother and Son of Paternal Brother -->
                    <StackPanel x:Name="Row7Panel" Orientation="Horizontal" Spacing="15">
                        <StackPanel x:Name="SonOfFullBrotherPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Son of Full Brother?" VerticalAlignment="Center" MinWidth="140"/>
                            <ComboBox x:Name="s13" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel x:Name="SonOfPaternalBrotherPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Son of Paternal Brother?" VerticalAlignment="Center" MinWidth="160"/>
                            <ComboBox x:Name="s14" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                    <!-- Row 8: Son of son of Full Brother and Son of son of Paternal Brother -->
                    <StackPanel x:Name="Row8Panel" Orientation="Horizontal" Spacing="15">
                        <StackPanel x:Name="SonOfSonOfFullBrotherPanel" Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="Son of son of Full Brother?" VerticalAlignment="Center" MinWidth="180"/>
                            <ComboBox x:Name="s15" SelectedIndex="0" HorizontalAlignment="Stretch" MinWidth="150">
                                <ComboBoxItem Content="No"/>
                            </ComboBox>
                        </StackPanel>
